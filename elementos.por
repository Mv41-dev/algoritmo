programa {
  funcao inicio() {
  inteiro num
  escreva("Digite um número de 1 a 4 para abrir uma porta: ")
  leia(num)
  escolha (num) {
  caso 1: 
  escreva("Porta de Fogo aberta!")
  pare
  caso 2: 
  escreva("Porta de Água aberta!")
  pare
  caso 3: 
  escreva("Porta de Terra aberta!")
  pare
  caso 4: 
  escreva("Porta de Ar aberta!")
  pare
  caso contrario: 
  escreva("Armadilha acionada! Corra!")
  }
 }
}