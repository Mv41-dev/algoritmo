programa {
  funcao inicio() {
  caracter botao 
  escreva("Digite o botão (Z, X ou K): ")
  leia(botao)      
  escolha (botao)
  {
  caso 'Z':
  {
  escreva("Zíngaro")
  pare 
  }         
  caso 'X':
  {
  escreva("Xarope estelar")
  pare 
  }         
  caso 'K':
  {
  escreva("Kryptonita")
  pare   
  }       
  caso contrario:
  {
  escreva("Botão inválido")
    }
  }
}
}
